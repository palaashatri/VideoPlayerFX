<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>

<VBox fx:id="root" spacing="10" xmlns:fx="http://javafx.com/fxml">
    <ImageView fx:id="videoView" fitWidth="800" fitHeight="450" preserveRatio="true"/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="openFileButton" text="Open File" onAction="#openFile"/>
        <Button fx:id="playPauseButton" text="Play" onAction="#togglePlayPause"/>
        <Slider fx:id="seekSlider" min="0" max="100" value="0"/>
    </HBox>
</VBox>